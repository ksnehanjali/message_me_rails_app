<h2 class="ui center aligned medium icon header">
  <i class="circular inverted red users icon"></i>
  Buddies
</h2>

<div class="ui two column grid">
  
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">  
      <div class="ui content">
        <div class="ui small feed">
          <% @messages.each do |msg| %>
            <div class="event">
              <div class="content">
                <div class="summary">
                  <em><%= msg.user.username %></em>: <%= msg.body %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Enter text..." />
              <i class="bordered inverted blue edit icon"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="four wide column">

    <div class="ui fluid raised card chatbox">
      <div class="ui content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>

  </div>

</div>